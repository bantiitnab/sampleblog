<%= render 'partials/navbar' %>
<div class="view-content container-fluid">	

	<h2>Tags List</h2>
	
	<div class="option-list pb-3">		
		<div>Add a new tag</div>
		<div id="add-option" class="row">
			<div class="col-md-4">			
				<input type="text" id="tag-name" name="tag_name" class="form-control" placeholder="name">
			</div>
			<div class="col-md-4">				
				<input type="text" id="tag-description" name="tag_description" class="form-control" placeholder="description">
			</div>
			<div class="col-md-4">
				<button class="btn btn-primary" id="add-tag-btn">add</button>
			</div>
		</div>		
	</div>

	<h4>Listing <%=@tags.count%> tags</h4>
	<div class="tags-list">		
		<% @tags.each do |tag| %>
		<div class="row tag" data-id="<%=tag.id%>" id="tag-<%= tag.id %>">
			<div class="col-md-8">
				<div class="row">
					<div class="col-3 name"><%= tag.name %></div>
					<div class="col-9 description"><%= tag.description %></div>				
				</div>
			</div>			
			<div class="col-md-4">
				<a href="/tags/<%= tag.id %>/edit"><button class="btn btn-primary">edit</button></a>
				<button class="btn btn-primary delete-tag-btn">delete</button>				
			</div>
		</div>
		<% end %>
	</div>
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</div>

<!-- -->
<div class="row tag tag-clone d-none" data-id="">
	<div class="col-md-8">
		<div class="row">
			<div class="col-3 name"></div>
			<div class="col-9 description"></div>				
		</div>
	</div>			
	<div class="col-md-4">
		<a href="" class="edit-tag-link"><button class="btn btn-primary">edit</button></a>
		<button class="btn btn-primary delete-tag-btn">delete</button>				
	</div>
</div>

<script>
	// on page load call Post.init() function
	$(function() {
		Tag.init();		
	})
</script>

